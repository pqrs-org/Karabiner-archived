    <item>
      <name>Configure Satechi Bluetooth Remote (global settings)</name>
      <identifier>remap.device_SatechiMediaKeysGlobally</identifier>
      <device_only>DeviceVendor::Satechi, DeviceProduct::Satechi_Bluetooth_Remote</device_only>
      <autogen>__KeyToKey__ ConsumerKeyCode::MUSIC_PLAY, KeyCode::SPACE</autogen> <!-- Play button -->
      <autogen>__KeyToKey__ ConsumerKeyCode::RawValue::0x11, KeyCode::CURSOR_RIGHT</autogen><!-- Next button -->
      <autogen>__KeyToKey__ ConsumerKeyCode::RawValue::0x12, KeyCode::CURSOR_LEFT</autogen><!-- Previous button -->
      <autogen>__KeyToKey__ ConsumerKeyCode::RawValue::0x0e, KeyCode::ESCAPE</autogen><!-- Keyboard button -->
      <!-- The following raw values are disabled, but can be used to modify the indicated keys, if desired. -->
      <!-- <autogen>__KeyToKey__ ConsumerKeyCode::RawValue::0x00, KeyCode::CURSOR_UP</autogen>--><!-- Volume Up button -->
      <!-- <autogen>__KeyToKey__ ConsumerKeyCode::RawValue::0x01, KeyCode::CURSOR_DOWN</autogen>--><!-- Volume Down button -->
      <!-- <autogen>__KeyToKey__ ConsumerKeyCode::RawValue::0x07, KeyCode::CURSOR_RIGHT</autogen>--><!-- Volume Mute button -->
      <!--
      Additionally, if you really want to go crazy... the following RawValues map to the number keys under the sleeve, which
      would usually only be used for Bluetooth pairing.  (I don't recommend remapping the <Enter> key, as the enter key also
      appears to cause a momentary disconnect/reconnect of the Bluetooth signal.)
        0x12 = 1
        0x13 = 2
        0x14 = 3
        0x15 = 4
        0x17 = 5
        0x16 = 6
        0x1a = 7
        0x1c = 8
        0x19 = 9
        0x1d = 0
      -->
    </item>
